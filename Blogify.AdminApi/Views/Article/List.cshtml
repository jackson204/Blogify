
@model List<Blogify.AdminApi.Views.ViewModel.ArticleListItemViewModel>
@{
    ViewData["Title"] = "文章管理";
}
<div id="articlesListView">
    <!-- 頁面標題 -->
    <div class="page-header">
        <h2 class="page-title">文章管理</h2>
        <p class="page-subtitle">管理您的所有文章內容</p>
    </div>
    <!-- 操作工具列 -->
    <div class="content-card">
        <div class="card-header">
            <h3 class="card-title">文章列表</h3>
            <div class="card-actions">
                <a class="btn btn-primary" asp-controller="Article" asp-action="Create">
                    <i class="icon-plus"></i>
                    新增文章
                </a>
            </div>
        </div>
        <div class="card-body">
            <!-- 篩選工具 -->
            <div class="filter-toolbar">
                <div class="filter-group">
                    <input type="text" id="searchInput" class="form-control" placeholder="搜尋文章標題、內容或作者...">
                </div>
                <div class="filter-group">
                    <select id="statusFilter" class="form-control">
                        <option value="">所有狀態</option>
                        <option value="published">已發布</option>
                        <option value="draft">草稿</option>
                    </select>
                </div>
                <div class="filter-group">
                    <select id="categoryFilter" class="form-control">
                        <option value="">所有分類</option>
                    </select>
                </div>
                <div class="filter-group">
                    <select id="sortFilter" class="form-control">
                        <option value="updatedAt">更新時間</option>
                        <option value="title">標題</option>
                        <option value="author">作者</option>
                        <option value="views">瀏覽數</option>
                    </select>
                </div>
            </div>
            <!-- 批量操作 -->
            <div class="batch-actions d-none" id="batchActions">
                <div class="batch-info">
                    已選擇 <span id="selectedCount">0</span> 篇文章
                </div>
                <div class="batch-buttons">
                    <button class="btn btn-secondary btn-sm" data-action="publish">批量發布</button>
                    <button class="btn btn-secondary btn-sm" data-action="draft">設為草稿</button>
                    <button class="btn btn-secondary btn-sm" data-action="feature">設為精選</button>
                    <button class="btn btn-danger btn-sm" data-action="delete">批量刪除</button>
                </div>
            </div>
            <!-- 文章表格 -->
            <div class="table-container">
                <table class="data-table" id="articlesTable">
                    <thead>
                        <tr>
                            <th width="40">
                                <input type="checkbox" id="selectAll">
                            </th>
                            <th>標題</th>
                            <th width="100">作者</th>
                            <th width="100">分類</th>
                            <th width="80">狀態</th>
                            <th width="100">瀏覽數</th>
                            <th width="120">更新時間</th>
                            <th width="120">操作</th>
                        </tr>
                    </thead>
                    <tbody id="articlesTableBody">
                        @if (Model.Any())
                        {
                            foreach (var viewModel in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="select-article" value="@viewModel.Id" />
                                    </td>
                                    <td>
                                        <div class="article-title-cell">
                                            <strong>@viewModel.Title</strong>
                                            @if (viewModel.Featured)
                                            {
                                                <span class="status-badge status-featured">精選</span>
                                            }
                                        </div>
                                    </td>
                                    <td>@viewModel.Author</td>
                                    <td>@viewModel.CategoryName</td>
                                    <td>
                                        <div class="category-name-cell">
                                           <span class="status-badge @(viewModel.Status=="published"?"status-published":"status-draft") ">
                                           <strong>@(viewModel.Status == "published" ? "已發布" : "草稿")</strong>
                                           </span>
                                        </div>
                                        </td>
                                    <td>@viewModel.Views</td>
                                    <td>@viewModel.UpdatedAt.ToString("yyyy年M月d日 tt hh:mm", new CultureInfo("zh-TW"))</td>
                                    <td>
                                        <div class="table-actions">
                                            <button class="action-btn btn-view" onclick="window.open('../client/article.html?id=${article.id}', '_blank')" title="預覽">
                                                <i class="icon-view"></i>
                                            </button>
                                            <button class="action-btn btn-edit" onclick="" title="編輯">
                                                <i class="icon-edit"></i>
                                            </button>
                                            <button class="action-btn btn-delete" onclick="" title="刪除">
                                                <i class="icon-delete"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center p-4">
                                    <div class="spinner d-none"></div>
                                    <p class="mt-3">目前沒有資料</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- 分頁 -->
            <div id="paginationContainer" class="pagination-container"></div>
        </div>
    </div>
</div>

