<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MyBlog</title>
    <meta name="description" content="MyBlog 管理後台儀表板">
    <!-- 樣式表 -->
    <link rel="stylesheet" href="@Url.Content("~/shared/css/common.css")">
    <link rel="stylesheet" href="@Url.Content("~/admin/css/admin.css")">
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>📊</text></svg>">
</head>
<body>
    <div class="admin-layout">
        <!-- 側邊欄 -->
        <aside class="admin-sidebar">
            <div class="sidebar-header">
                <a href="@Url.Content("~/admin/index.html")" class="sidebar-logo">
                    📊 MyBlog Admin
                </a>
            </div>
            <nav>
                <ul class="sidebar-menu">
                    <li>
                        <a href="@Url.Content("~/admin/index.html")" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                            <i class="icon-dashboard"></i>
                            <span>儀表板</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/Article/List" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Article" ? "active" : "")">
                            <i class="icon-article"></i>
                            <span>文章管理</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Content("~/admin/categories.html")">
                            <i class="icon-category"></i>
                            <span>分類管理</span>
                        </a>
                    </li>
                    <li>
                        <a href="#settings">
                            <i class="icon-settings"></i>
                            <span>系統設定</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        <!-- 頂部導航 -->
        <header class="admin-header">
            <h1 class="header-title">@ViewData["Title"]</h1>
            <div class="header-actions">
                <div class="user-info">
                    <div class="user-avatar">A</div>
                    <span class="user-name">管理員</span>
                </div>
                <button class="logout-btn" data-action="logout">
                    <i class="icon-logout"></i>
                    登出
                </button>
            </div>
        </header>
        <!-- 主要內容 -->
        <main class="admin-main">
            @RenderBody()
        </main>
    </div>
    <!-- JavaScript -->
    <script src="@Url.Content("~/shared/js/utils.js")"></script>
    <script src="@Url.Content("~/admin/js/api.js")"></script>
    <script src="@Url.Content("~/admin/js/auth.js")"></script>
    <script src="@Url.Content("~/admin/js/admin.js")"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>