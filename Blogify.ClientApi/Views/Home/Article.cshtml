@model Blogify.ClientApi.ViewModel.HomeArticleViewModel
@{
    ViewBag.Title = Model.Title;
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="article-detail">
                <h1>@Model.Title</h1>
                <div class="meta text-muted mb-2">
                    <i class="fas fa-calendar-alt me-1"></i>@Model.PublishedDate.ToString("yyyy-MM-dd") |
                    <i class="fas fa-folder me-1"></i>@Model.CategoryName |
                    <i class="fas fa-user me-1"></i>@Model.AuthorName |
                    <i class="fas fa-eye me-1"></i>閱讀：@Model.ViewCount 次
                </div>
                <div class="mb-3">
                    @if (Model.Tags != null)
                    {
                        foreach (var tag in Model.Tags)
                        {
                            <span class="badge bg-secondary me-1" style="font-size:1em;">@tag</span>
                        }
                    }
                </div>
                <div class="article-summary mb-3">
                    <strong>@Model.Summary</strong>
                </div>
                <div class="article-content">
                    <p>@Model.Preview</p>
                </div>
            </div>
        </div>
    </div>
</div>
